{
    "version": "2.0.0",
    "tasks": [
     {
      "type": "cppbuild",
      "label": "Custom Build",
      "command": "/usr/bin/g++",
      "args": [
       "-std=c++17",
       "-fdiagnostics-color=always",
       "-Wall",
       "-g",
       "-I${workspaceFolder}/Libraries/include",
       "-L${workspaceFolder}/Libraries/lib",
       "${workspaceFolder}/Libraries/lib/libglfw.3.3.dylib",
       "${workspaceFolder}/*.cpp",
       "${workspaceFolder}/glad.c",
       "-o",
       "${workspaceFolder}/app",
       "-framework",
       "OpenGL",
       "-framework",
       "Cocoa",
       "-framework",
       "IOKit",
       "-framework",
       "CoreVideo",
       "-framework",
       "CoreFoundation",
       "-Wno-deprecated"
      ],
      "options": {
       "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
       "kind": "build",
       "isDefault": true
      },
      "detail": "compiler: /usr/bin/clang++"
     }
    ]
   }